{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django: Runserver",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:8000"
            ],
            "django": true,
            "justMyCode": false,
            "env": {
                "PYTHONUNBUFFERED": "1",
                "DEBUG": "True"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Django: Generate Stories id=25",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "generate_stories",
                "--id",
                "25", 
                "--date",
                "2025-07-01",
                "--force",
                "-v",
                "2"
            ],
            "django": true,
            "justMyCode": true,
            "env": {
                "DJANGO_SETTINGS_MODULE": "report_generator.settings"
            },
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
